#!/bin/bash
export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/local/go/bin
export GOPATH=:/go/src/base:/home/linuxboot/mainboards/intel/generic
git clone https://github.com/linuxboot/mainboards
cd mainboards/intel/generic
make fetch
go build github.com/u-root/u-root
export PATH=$PATH:.
make uroot
make bzImage
cp ./linux/arch/x86/boot/bzImage linuxboot.bin
cp linuxboot.bin /volume
